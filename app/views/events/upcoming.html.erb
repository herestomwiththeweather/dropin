<div style="margin: 20px" data-controller="board" data-board-start-value="<%=@event.start_at.to_i %>">
<%= turbo_frame_tag('search-results') do %>
  <%= turbo_stream_from(@event, :registrations) %>
  <% if @event2.present? %>
    <%= turbo_stream_from(@event2, :registrations) %>
  <% end %>
  <%= turbo_frame_tag('search-form') do %>
    <%= form_with(url: '/upcoming', method: 'get', data: {'turbo-frame': 'search-results', 'board-target': 'form'}) do %>
      <%= hidden_field_tag("event_identifier", "0") %>
    <% end %>
  <% end %>
  <div style="margin-bottom: 10px">
    <strong>Start time: </strong><%= @event.start_at.strftime('%b %e, %l:%M %p') %>
  </div>
  <h4><strong><%= @event.people_text %></strong></h4>
  <%= render "registrations/list", event: @event %>
  <% if @event2.present? %>
    <h4><strong><%= @event2.people_text %></strong></h4>
    <%= render "registrations/list", event: @event2 %>
  <% end %>
<% end %>
</div>
