<div>
  <strong>Start time: </strong><%= @players_event.start_at.to_s(:rfc822) %>
</div>
<h1><strong>Players</strong></h1>
<div id="players">
<% i = 1 %>
  <% @players.each do |player| %>
    <div><%= i %>. <%= player %></div>
    <% i += 1 %>
  <% end %>
</div>
<h1><strong>Goalies</strong></h1>
<div id="goalies">
  <% @goalies.each do |goalie| %>
    <div><%= goalie %></div>
  <% end %>
</div>
<div class="py-2">
  <% if @players_event&.last_fetched_at.present? %>
  <strong>Last refreshed: <%= time_ago_in_words(@players_event.last_fetched_at) %> ago</strong>
  <% end %>
</div>
